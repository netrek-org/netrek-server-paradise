# top-level Makefile for Paradise
# @configure_input@

@SET_MAKE@

bindir=@bindir@
datadir=@datadir@
exec_prefix=@exec_prefix@
libdir=@libdir@
libexecdir=@libexecdir@
mandir=@mandir@
prefix=@prefix@
srcdir=@srcdir@
top_srcdir=@top_srcdir@

AR=ar
ARFLAGS=cruv
RANLIB=@RANLIB@

CC=@CC@
CPP=@CPP@

CFLAGS=@CFLAGS@
CPPFLAGS=@CPPFLAGS@ -I./src/include
DEFS=@AUTH_DEFS@ @DEFS@
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@ -lm

INSTALL=@INSTALL@
INSTALL_SCRIPT=@INSTALL_SCRIPT@
INSTALL_DATA=@INSTALL_DATA@

all:
	@cd src && $(MAKE)

clean:
	@cd src && $(MAKE) clean

install:
	@cd src && $(MAKE) install

distclean: clean
	@cd src && $(MAKE) distclean
	-rm -f config.*
	-rm -f Makefile

cvsclean: distclean
	-rm -f configure
